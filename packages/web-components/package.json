{
  "name": "@ferment-ui/web-components",
  "private": false,
  "version": "0.0.1-alpha.4",
  "description": "Ferment UI Web Component library",
  "main": "dist/index.js",
  "type": "module",
  "files": [
    "src/**/*.*",
    "dist/**/*.*"
  ],
  "scripts": {
    "tsc": "wireit",
    "dev": "vite",
    "build": "wireit",
    "css": "wireit",
    "test": "wireit",
    "storybook": "wireit",
    "storybook:build": "wireit",
    "preview": "wireit"
  },
  "wireit": {
    "tsc": {
      "command": "tsc",
      "files": [
        "src/**/*.ts"
      ],
      "output": [
        "dist/**/*"
      ]
    },
    "build": {
      "dependencies": [
        "tsc"
      ],
      "command": "rollup -c",
      "output": [
        "dist/ferment-ui.js"
      ]
    },
    "css": {
      "command": "node ./lib/generate-css.js"
    },
    "dev": {
      "command": "vite",
      "dependencies": [
        "css"
      ]
    },
    "storybook": {
      "command": "storybook dev -p 6006",
      "files": [
        "src/**/*.*",
        ".storybook/**/*.*"
      ]
    },
    "storybook:build": {
      "command": "storybook build -o docs",
      "files": [
        "src/**/*.*",
        ".storybook/**/*.*"
      ],
      "output": [
        "docs/**/*.*"
      ]
    },
    "preview": {
      "dependencies": [
        "css"
      ],
      "command": "vite preview"
    },
    "test": {
      "dependencies": [
        "test:unit",
        "test:e2e"
      ]
    },
    "test:unit": {
      "command": "jest --coverage",
      "files": [
        "src/**/*.test.ts",
        "test/**/*.test.ts"
      ]
    },
    "test:e2e": {
      "dependencies": [
        "preview"
      ],
      "command": "playwright test",
      "files": [
        "tests/e2e/**/*.test.ts"
      ]
    }
  },
  "keywords": [
    "ui",
    "frontend",
    "component library",
    "web components",
    "design system"
  ],
  "author": "alexgagnon",
  "license": "ISC",
  "dependencies": {
    "@floating-ui/dom": "^1.2.1",
    "@lit-labs/virtualizer": "^2.0.0",
    "@lit/task": "^1.0.0",
    "@open-wc/lit-helpers": "^0.6.0",
    "lit": "^3.0.0"
  },
  "devDependencies": {
    "@lit-labs/testing": "^0.2.1",
    "@lit/react": "^1.0.0",
    "@rollup/plugin-commonjs": "^25.0.5",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-replace": "^5.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@storybook/addon-essentials": "^7.4.6",
    "@storybook/addon-links": "^7.4.6",
    "@storybook/blocks": "^7.4.6",
    "@storybook/web-components": "^7.4.6",
    "@storybook/web-components-vite": "^7.4.6",
    "cpy-cli": "^5.0.0",
    "cssnano": "^6.0.3",
    "eslint": "^8.51.0",
    "husky": "^8.0.3",
    "playwright": "^1.39.0",
    "postcss": "^8.4.35",
    "postcss-for": "^2.1.1",
    "postcss-import": "^16.0.1",
    "postcss-mixins": "^9.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "storybook": "^7.4.6",
    "typescript": "^5.2.0",
    "vite": "^5.1.4",
    "vitest": "^1.3.1",
    "wireit": "^0.14.0"
  }
}
